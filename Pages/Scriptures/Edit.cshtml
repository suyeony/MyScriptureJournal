@page
@model MyScriptureJournal.Pages.Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ID" />
            <div class="form-group">
                <label asp-for="Scripture.BookId" class="control-label"></label>
                <select asp-for="Scripture.BookId" class="form-control" asp-items="ViewBag.BookName"></select>
                <span asp-validation-for="Scripture.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Verses" class="control-label"></label>
                <input asp-for="Scripture.Verses" class="form-control" />
                <span asp-validation-for="Scripture.Verses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Notes" class="control-label"></label>
                <input asp-for="Scripture.Notes" class="form-control" />
                <span asp-validation-for="Scripture.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.CreateDate" class="control-label"></label>
                <input asp-for="Scripture.CreateDate" class="form-control" />
                <span asp-validation-for="Scripture.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
